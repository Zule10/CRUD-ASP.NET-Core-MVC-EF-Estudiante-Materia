@model IEnumerable<PruebaDF.Models.Estudiante>

@{
    ViewData["Title"] = "Index";
}

<h1>Estudiante</h1>

<div class="row justify-content-end">
    <div class="col-md-4">
        <a class="btn btn-primary" role="button" asp-action="Create">Crear</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EstudianteId">Modificar</a> 
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.EstudianteId">Ver Detalle</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EstudianteId">Eliminar</a> 
                <a class="btn btn-success" asp-action="Index" asp-controller="MateriasEstudiantes" asp-route-id="@item.EstudianteId">Asociar Materias</a>
            </td>
        </tr>
}
    </tbody>
</table>
