@model PruebaDF.Models.MateriasEstudiante

@{
    ViewData["Title"] = "Create";
}

<h1>Asociar Materia Estudiante</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estudiante" class="control-label"></label>
                <select asp-for="EstudianteId" class="form-control" asp-items="ViewBag.EstudianteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Materia" class="control-label"></label>
                <select asp-for="MateriaId" class="form-control" asp-items="ViewBag.MateriaId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewBag.IdEstudiante">Volver</a>
            </div>
        </form>          
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
