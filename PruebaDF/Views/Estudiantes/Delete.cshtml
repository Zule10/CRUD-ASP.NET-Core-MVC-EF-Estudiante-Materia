@model PruebaDF.Models.Estudiante

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Estudiante</h1>
<h2>¿Está seguro de que desea eliminar el estudiante?</h2>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
    </dl>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="EstudianteId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> 
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </form>
    </div>   
</div>
