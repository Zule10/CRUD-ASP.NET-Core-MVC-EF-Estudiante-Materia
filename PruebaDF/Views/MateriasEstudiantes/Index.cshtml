@model IEnumerable<PruebaDF.Models.MateriasEstudiante>

@{
    ViewData["Title"] = "Index";
}

<h1>Materias Estudiante</h1>

<div class="row justify-content-end">
    <div class="col-md-4">
        <a class="btn btn-primary" role="button" asp-action="Create" asp-route-idEst="@ViewBag.IdEstudiante">Crear</a>
    </div>
</div>

<br />

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong> Oups! </strong> @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materia.Creditos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estudiante.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materia.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materia.Creditos)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EstudianteId" asp-route-idMat="@item.MateriaId">Modificar</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.EstudianteId" asp-route-idMat="@item.MateriaId">Ver Detalle</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EstudianteId" asp-route-idMat="@item.MateriaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Estudiantes">Volver</a>
</div>