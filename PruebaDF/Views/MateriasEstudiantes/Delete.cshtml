@model PruebaDF.Models.MateriasEstudiante

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Materia Estudiante </h1>
<h2>¿Está seguro que desea eliminar esta asociacion?</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materia.Creditos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.Creditos)
        </dd>
    </dl>
 </div>
 <div>   
    <form asp-action="Delete">
        <input type="hidden" asp-for="EstudianteId" />
        <input type="hidden" asp-for="MateriaId" name="idMat" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewBag.IdEstudiante">Volver</a>
    </form>
</div>
