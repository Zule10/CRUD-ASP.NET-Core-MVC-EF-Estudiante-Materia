@model PruebaDF.Models.MateriasEstudiante

@{
    ViewData["Title"] = "Details";
}

<h1>Información Materia Estudiante </h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Materia.Creditos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Materia.Creditos)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.EstudianteId" asp-route-idMat="@Model?.MateriaId">Modificar</a> 
    <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model?.EstudianteId">Volver</a>
</div>
